# common aliases

alias reload="source ~/.zshrc"
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias aliasconfig="vim ~/workspace/dotfiles/system/aliases.symlink"

alias grep="grep --color=auto"

# link personal or work .gitconfig
alias link-gitconfig-work="sudo ln -sf ~/workspace/dotfiles/git/gitconfig.work ~/.gitconfig"
alias link-gitconfig-personal="sudo ln -sf ~/workspace/dotfiles/git/gitconfig.personal ~/.gitconfig"

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# link all the functions
source ~/workspace/dotfiles/functions/clipboard.sh
source ~/workspace/dotfiles/functions/nvm.sh
source ~/workspace/dotfiles/functions/pyenv.sh
source ~/workspace/dotfiles/functions/secrets.sh